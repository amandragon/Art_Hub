<%= render :partial => 'layouts/header' %>

<h3>Create a New Review</h3>

<div class="row">
  <div class="span15 offset3">
    <%= form_for(@review) do |f| %>
      <% unless @review.errors.count == 0   %>
        <div class="alert alert-error">
          The form contains <%= pluralize(@review.errors.count, "error") %>.
        </div>
        <ul>
        <% @review.errors.full_messages.each do |msg| %>
          <li>* <%= msg %></li>
        <% end %>
        </ul>
      <% end %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :review_text %>
      <%= f.text_area :review_text %>

      <%= f.label :score %>
      <%= f.text_field :score %><br>

      <%= f.hidden_field :reviewee_id, :value => @reviewee_id %>      

      <p>Review is being uploaded by <%=@current_user.name%></p>

      <!-- bootstrap for other fields in bio-->

      <%= f.submit "Post review", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
